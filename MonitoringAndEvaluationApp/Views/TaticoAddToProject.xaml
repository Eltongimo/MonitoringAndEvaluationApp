<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonitoringAndEvaluationApp.TaticoAddToProject"
             Shell.FlyoutBehavior="Disabled"
             Title="Tactico"
             >

    <ContentPage.ToolbarItems >
        <ToolbarItem Text="Adicionar"  Clicked="AddProject" />
        <ToolbarItem Text="Mais" Clicked="SeeMore"/>
    </ContentPage.ToolbarItems>
  
    <StackLayout>
        <ListView x:Name="projectView" SelectionMode="Single"
                  BackgroundColor="Transparent"
                  ItemSelected="HandleSelectedItem"
                  >
            <ListView.ItemTemplate>
                <DataTemplate >
                   <TextCell TextColor="Black" Text="{Binding ProjectName}" Detail="{Binding OperatorName}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>