<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonitoringAndEvaluationApp.Views.OperationalHome"
             Shell.FlyoutBehavior="Disabled"
             Title="Utilizador Operacional"
             >
    
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="projectViewContent"
                      SelectionMode="Single"
                      BackgroundColor="Transparent"
                      ItemSelected="HandleItemSelected"
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell TextColor="Black" Text="{Binding ProjectName}" Detail="{Binding OperatorName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>